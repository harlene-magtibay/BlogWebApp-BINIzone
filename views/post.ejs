    <a class="navbar-brand py-2" href="/#<%= category %>"><img src="/images/BINIzone.png" alt="" style="height: 48px; width: auto;"></a>
  </div>
  <div class="full-post-container">
    <div class="full-post">
      <h1 class="post-title"><%= post.title %></h1>
      <hr>
      <div class="post-content">
        <%- post.content %> 
      </div>
      <div class="d-flex justify-content-center my-5">
        <a class="backToHome" href="/#<%= category %>">Back to Home</a>
      </div>
    </div>
  </div>
</body>
