<script>
    const playBtn = document.getElementById('playIntroBtn');
    const flipper = document.querySelector('.flip-container');
    const audio = document.getElementById('biniAudio');
    const meetBiniSection = document.getElementById('meetBini');
  
    playBtn.addEventListener('click', () => {
      audio.play().then(() => {
        flipper.classList.add('flipped');
      }).catch(err => {
        console.error("Autoplay error:", err);
        alert("Please allow audio playback in your browser.");
      });
    });
  
    audio.addEventListener('ended', () => {
      // Scroll smoothly to the Meet BINI section after the intro finishes
      meetBiniSection.scrollIntoView({ behavior: 'smooth' });
    });

    audio.addEventListener('ended', () => {
    setTimeout(() => {
        meetBiniSection.scrollIntoView({ behavior: 'smooth' });
    }, 1500); // Delay in ms
    });
</script>
  
  
  

